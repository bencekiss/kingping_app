<h1>Add a game</h1>
<% players_array = Player.all.map {|player| [player.name, player.id] } %>
<%= link_to "Back to games", games_url %>
<%= form_for @game do |f| %>
  <p>
    <%= f.label :gamedate %><br>
    <%= f.text_field :gamedate %>
  </p>
  <p>
    <%= f.label :player1_id %><br>
    <%= f.collection_select(:player1_id, Player.all, :id, :name) %>
  </p>
  <p>
    <%= f.label :player2_id %><br>
    <%= f.collection_select(:player2_id, Player.all, :id, :name) %>
  </p>
  <p>
    <%= f.label :p1points %><br>
    <%= f.text_field :p1points %>
  </p>
  <p>
    <%= f.label :p2points %><br>
    <%= f.text_field :p2points %>
  </p>
  <p>
    <%= f.submit "Add game" %>
  </p>

<% end %>
