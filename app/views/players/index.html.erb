<h2>Players in da house</h2>
<div class="links">
  <h3><%= link_to "Add New Player", new_player_path %></h3>
  <h3><%= link_to "Make a Match!", new_game_path %></h3>
</div>
<div class="container">
  <div class="leaderboard">

    <h1>Leaderboard</h1>
    <table>
      <thead>
        <td>Alias</td><td>Name</td><td>Win Rate</td>
      </thead>
      <tbody>
        <% @leaderboard.each do |p| %>
        <tr>
          <td><%= link_to image_tag(p[2]), player_path(p[3]) %> <td><%= p[1] %></td> <td><%= p[0] %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <% @players.each do |player| %>
  <div class="player-profile">
    <p>
      <%= player.name %><br>
      (<%= player.nickname %>)<br>
      Wins/Losses: <strong><%= player.wins %>/<%= player.losses %></strong><br>
      <%= link_to image_tag(player.url), player_path(player.id) %>
    </p>
  </div>
  <% end %>


</div>
